<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nano_Windows_Timer"
        xmlns:Timers="clr-namespace:System.Timers;assembly=System.ComponentModel.TypeConverter" x:Name="MainTimerWindow" x:Class="Nano_Windows_Timer.MainWindow"
        mc:Ignorable="d"
        Title="Timer" Height="450" Width="500" Foreground="{x:Null}" FontSize="16" RenderTransformOrigin="0.5,0.5" Background="#FF282828">
    <Window.LayoutTransform>
        <TransformGroup>
            <ScaleTransform/>
            <SkewTransform/>
            <RotateTransform/>
            <TranslateTransform X="0" Y="0"/>
        </TransformGroup>
    </Window.LayoutTransform>
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    <Window.RenderTransform>
        <TransformGroup>
            <ScaleTransform/>
            <SkewTransform/>
            <RotateTransform Angle="0"/>
            <TranslateTransform/>
        </TransformGroup>
    </Window.RenderTransform>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="Nano Timer" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,10"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding TimeDisplay}" FontSize="48" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button Content="Start" Command="{Binding StartCommand}"
                    Width="100" Height="40" Margin="5"/>
            <Button Content="Pause" Command="{Binding PauseCommand}"
                    Width="100" Height="40" Margin="5"/>
            <Button Content="Reset" Command="{Binding ResetCommand}"
                    Width="100" Height="40" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
